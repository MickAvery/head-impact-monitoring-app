<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:backgroundTint="#323232"
    android:orientation="vertical"
    tools:context=".screens.devterminal.DevTerminalFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:fillViewport="true">

        <TextView
            android:id="@+id/text_terminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_textview_terminal"
            android:backgroundTint="#434343"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textSize="18sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_command_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Type command"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button_dev_terminal_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SEND" />
    </LinearLayout>
</LinearLayout>